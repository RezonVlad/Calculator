<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/clear_btn"
                style="@style/ActionButton"
                android:text="Очистити"
                android:background="@drawable/custom_button_2"
                />

            <TextView
                android:id="@+id/equal_btn"
                style="@style/ActionButton"
                android:text="="
                android:background="@drawable/custom_button_2"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/bt_7"
                style="@style/NumberButton"
                android:text="7"
                android:background="@drawable/custom_button"
                />
            <TextView
                android:id="@+id/bt_8"
                style="@style/NumberButton"
                android:text="8"
                android:background="@drawable/custom_button"
                />
            <TextView
                android:id="@+id/bt_9"
                style="@style/NumberButton"
                android:text="9"
                android:background="@drawable/custom_button"
                />
            <TextView
                android:id="@+id/mu_bt"
                style="@style/ActionButton"
                android:text="*"
                android:background="@drawable/custom_button_2"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/bt_4"
                style="@style/NumberButton"
                android:text="4"
                android:background="@drawable/custom_button"
                />
            <TextView
                android:id="@+id/bt_5"
                style="@style/NumberButton"
                android:text="5"
                android:background="@drawable/custom_button"
                />

            <TextView
                android:id="@+id/bt_6"
                style="@style/NumberButton"
                android:text="6"
                android:background="@drawable/custom_button"
                />
            <TextView
                android:id="@+id/pl_bt"
                style="@style/ActionButton"
                android:text="+"
                android:background="@drawable/custom_button_2"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/bt_1"
                style="@style/NumberButton"
                android:text="1"
                android:background="@drawable/custom_button"
                />

            <TextView
                android:id="@+id/bt_2"
                style="@style/NumberButton"
                android:text="2"
                android:background="@drawable/custom_button"
                />

            <TextView
                android:id="@+id/bt_3"
                style="@style/NumberButton"
                android:text="3"
                android:background="@drawable/custom_button"
                />

            <TextView
                android:id="@+id/mi_bt"
                style="@style/ActionButton"
                android:text="-"
                android:background="@drawable/custom_button_2"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/ba_bt"
                style="@style/NumberButton"
                android:text="Назад"
                android:background="@drawable/custom_button"/>

            <TextView
                android:id="@+id/bt_0"
                style="@style/NumberButton"
                android:text="0"
                android:background="@drawable/custom_button"/>

            <TextView
                android:id="@+id/d_bt"
                style="@style/NumberButton"
                android:layout_width="0dp"
                android:text="."
                android:background="@drawable/custom_button"/>

            <TextView
                android:id="@+id/slash_bt"
                style="@style/ActionButton"
                android:text="/"
                android:background="@drawable/custom_button_2"
                />

        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

</LinearLayout>
